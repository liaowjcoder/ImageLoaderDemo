<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zeal.disklrucachedemo.MainActivity">

    <Button
        android:id="@+id/disk_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="disk_cache"/>
    <Button
        android:id="@+id/disk_read"  android:layout_below="@id/disk_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="disk_read"/>
    <Button
        android:id="@+id/disk_remove"  android:layout_below="@id/disk_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="remove"
        android:text="disk_remove"/>
    <ImageView android:id="@+id/id_image" android:layout_width="match_parent"
               android:layout_height="match_parent"
              android:layout_below="@id/disk_remove"
    />
</RelativeLayout>
