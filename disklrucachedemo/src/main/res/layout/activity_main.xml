<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zeal.disklrucachedemo.MainActivity">

    <TextView android:id="@+id/id_text" android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/disk_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="disk_cache"/>
    <Button
        android:id="@+id/disk_read" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="disk_read"/>
    <Button
        android:id="@+id/disk_remove" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="remove"
        android:text="清除指定key的缓存"/>

    <Button
        android:id="@+id/disk_totle_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="totalSize"
        android:text="全部缓存大小"/>
    <ImageView android:id="@+id/id_image" android:layout_width="match_parent"
               android:layout_height="match_parent"
    />
</LinearLayout>
